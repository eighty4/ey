{
  "include": ["lib/*.ts"],
  "exclude": ["lib/*.spec.ts"],
  "compilerOptions": {
    "rootDir": "lib",
    "outDir": "lib_js",
    "declarationDir": "lib_types",
    "target": "ESNext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "rewriteRelativeImportExtensions": true,

    /* Linting */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "verbatimModuleSyntax": true
  }
}
